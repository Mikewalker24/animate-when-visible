{
  "name": "animate-when-visible",
  "version": "1.0.6",
  "description": "A tiny (2KB), no-dependency JavaScript module that adds classes to elements when they become visible, letting you control animations with CSS.",
  "main": "dist/index.umd.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.umd.js",
  "types": "index.d.ts",
  "scripts": {
    "start": "wds --node-resolve --root-dir . --open example/index.html",
    "build": "NODE_ENV=production rollup -c",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:example": "npm run build && mkdir -p example/lib && cp -r dist/* example/lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mikewalker24/animate-when-visible.git"
  },
  "homepage": "https://github.com/Mikewalker24/animate-when-visible#readme",
  "bugs": {
    "url": "https://github.com/Mikewalker24/animate-when-visible/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "animate",
    "visibility",
    "animation",
    "scroll",
    "viewport",
    "intersection-observer",
    "animation-classes",
    "staggered-animation",
    "css-animations",
    "visible-elements"
  ],
  "author": "Mike Walker",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@web/dev-server": "^0.4.6",
    "rollup": "^2.79.2"
  },
  "prepublishOnly": "npm run build",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.umd.js",
      "types": "./index.d.ts"
    }
  }
}
